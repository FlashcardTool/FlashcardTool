<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tool.flashcard.flashcardtool.QuizModeQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/deckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Deck Name"
            android:textSize="20sp"
            android:textColor="@color/textColorDark" />

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="410dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Who is Abhraham Lincoln?"
            android:textColor="@color/textColorDark"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:columnCount="2"
            android:rowCount="2">


            <FrameLayout
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:background="@color/cardview_light_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/buttonAnswer1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/blackcard"
                android:textColor="@color/textColorDark"
                android:text="1882" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:background="@color/cardview_light_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/buttonAnswer2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/blackcard"
                android:textColor="@color/textColorDark"
                android:layout_gravity="center"
                android:text="The 3/5ths compromise" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:background="@color/cardview_light_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/buttonAnswer3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/blackcard"
                android:textColor="@color/textColorDark"
                android:layout_gravity="center"
                android:text="A President" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:background="@color/cardview_light_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/buttonAnswer4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/blackcard"
                android:textColor="@color/textColorDark"
                android:layout_gravity="center"
                android:text="The South" />
            </FrameLayout>

        </GridLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
